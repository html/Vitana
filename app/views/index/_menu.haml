%table{ :cellspacing => "0", :border => "0", :width => "100%", :cellpadding => "0" }
  %tr
    %td.menu1{ :height => "8" }
  %tr
    %td
      .fl
        %table{ :cellspacing => "0", :border => "0", :width => "100%", :cellpadding => "0", :height => "25" }
          %tr.menu3
            - @menu_items.each do |item|
              %td{ :class => (@category == item ? 'menu_aktv' : 'menu2'),  :align => "center", :style => 'padding-top:5px'}
                = link_to item.title, { :category => item.id }
      .fr
        .search
          .fl
            %input.searchbar{ :name => "story", :type => "text", :value => "поиск по сайту"}
          .fl
            %input{ :name => "image",  :src => "img/search.gif", :type => "image", :align => "left", :height => "25" }
  %tr
    %td.menu1{ :height => "28", :style => 'padding:7px' }
      - if @pages.size > 1
        - @pages.each do |item|
          = link_to item.title, { :page => item.id }
          - if item != @pages.last
            |


:javascript
  $(function(){
    var searchtext = '';
    $('.searchbar').focus(function(){
      $(this).val(searchtext);
    }).blur(function(){
      searchtext = $(this).val();
      $(this).val('поиск по сайту');
    });
  });
